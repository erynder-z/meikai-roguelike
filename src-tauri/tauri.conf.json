{
  "$schema": "../node_modules/@tauri-apps/cli/schema`.json`",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173/"
  },
  "bundle": {
    "active": true,
    "category": "Game",
    "copyright": "",
    "targets": "all",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "resources": [],
    "shortDescription": "",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "productName": "meikai-roguelike",
  "mainBinaryName": "meikai-roguelike",
  "version": "0.1.0",
  "identifier": "com.meikai.roguelike.dev",
  "plugins": {
    "plugins": {
      "fs": {
        "scope": ["$APPDATA/*"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "help",
        "title": "Meikai - Help",
        "url": "help.html",
        "fullscreen": true,
        "visible": false,
        "focus": false
      },
      {
        "label": "main",
        "title": "meikai-roguelike",
        "url": "index.html",
        "fullscreen": true,
        "visible": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
